{
  "name": "@jstilb/mcp-toolkit-server",
  "version": "1.0.0",
  "description": "Top-tier MCP server with sampling, elicitation, real providers, tool annotations, outputSchema, and prompts. Uses @modelcontextprotocol/sdk.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcp-toolkit-server": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "license": "MIT",
  "author": "Justin Stilb",
  "repository": {
    "type": "git",
    "url": "https://github.com/jstilb/mcp-toolkit-server"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "anthropic",
    "ai",
    "tools",
    "sampling",
    "elicitation"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "lint": "eslint src/ tests/ && prettier --check src/ tests/",
    "lint:fix": "eslint --fix src/ tests/ && prettier --write src/ tests/",
    "type-check": "tsc --noEmit",
    "demo": "tsx src/demo.ts",
    "clean": "rm -rf dist coverage",
    "prepublishOnly": "npm run build && npm test"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.4",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^9.20.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
